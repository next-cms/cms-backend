import React from "react";
import { Layout } from "antd";

const { Header, Content, Footer, Sider } = Layout;

const LayoutWithSiderRight = ({ header, sider, children, footer }) => {
    return (
        <Layout>
            {header}
            <Layout>
                <Sider style={{ right: 0 }}>
                    {sider}
                </Sider>
            </Layout>
            <Layout>
                <Content>
                    {children}
                </Content>
            </Layout>
            {footer}
        </Layout>
    );
};

export default LayoutWithSiderRight;